<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/style.css")
        title Catch Mind
    body
        .loginBox
            form#jsLogin
                input(placeholder="what is your nickname", type="text")
        .gameContainer#jsGame
            .main
                #jsNotifs
                canvas.canvas#jsCanvas
                .controls#jsControls
                    .control__button
                        button#jsMode fill
                        button#jsSave save
                        #jsColor.control__colors
                            .control__color.jsColor(style='background-color: #2c2c2c;')
                            .control__color.jsColor(style='background-color: white;')
                            .control__color.jsColor(style='background-color: #ff3b30;')
                            .control__color.jsColor(style='background-color: #ff9500;')
                            .control__color.jsColor(style='background-color: #ffcc00;')
                            .control__color.jsColor(style='background-color: #4cd963;')
                            .control__color.jsColor(style='background-color: #5ac8fa;')
                            .control__color.jsColor(style='background-color: #0579ff;')
                            .control__color.jsColor(style='background-color: #5856d6;')
            .chat
                .player_Board#jsPBoard
                ul.chat__messages#jsMessages
                form.chat__form#jsSendMsg
                    input(placeholder="Write a message", type="type")
        script.
            window.events = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")
